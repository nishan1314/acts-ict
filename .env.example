# ACTS Environment Variables Template
# Copy these to your Render environment variables

# Django Settings
SECRET_KEY=django-insecure-CHANGE-THIS-TO-A-REAL-SECRET-KEY-FOR-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com

# Database (PostgreSQL on Render)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host.oregon-postgres.render.com
DB_PORT=5432

# Additional Settings (Optional)
TIME_ZONE=Asia/Dhaka
LANGUAGE_CODE=en-us

# Production Settings
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
